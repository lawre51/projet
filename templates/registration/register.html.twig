{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    <style>
    .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .wrapper code {background: #F5F5F5; padding: 2px 6px; }
    h2{margin-bottom:40px;}
    .user, .password {margin-bottom:10px; padding-left:10px; }
    .error{background:#f55;opacity:1;color:white;width:300px;margin:0 auto;margin-bottom:10px;}
    .login_box{border: 2px solid #bbbb;padding: 20px 20px;width:400px;margin:0 auto;box-shadow: 4px 4px 5px #9999;background:#ffff}
    .borderType{border-radius:4px}
    .theme_hoki{background: rgba(103,128,159,1);color:white; height:50px; }
</style>
</style>


<div class="jumbotron ">
    <div class="wrapper">
        <div class= "login_box ">
            
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            
            <div class="text-center">
            <h2 class="theme_hoki text-white">Nouveau salari√©</h2>
            </div>
            
            {{ form_start(registrationForm) }}
                
                <div class = "user form-group text-left">
                    {{ form_row(registrationForm.nom) }}
                </div>

                <div class = "user form-group text-left">
                    {{ form_row(registrationForm.prenom) }}
                </div>

                <div class = "user form-group text-left">
                    {{ form_row(registrationForm.email) }}
                </div>
                
                <div class = "user form-group text-left">
                    {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                    }) }}
                </div>

                <div class = "user form-group text-left">
                    {{ form_row(registrationForm.equipe) }}
                </div>

                <div class = "user form-group text-left">
                    {{ form_row(registrationForm.poste) }}
                </div>
                    
                <button type="submit" class="theme_hoki borderType">Register</button>
            {{ form_end(registrationForm) }}
            
            {#{{ form_start(registrationForm) }}
                {{ form(registrationForm) }}
                <button type="submit" class="theme_hoki borderType">Register</button>
            {{ form_end(registrationForm) }}#}

        </div>
    </div>
</div>
{% endblock %}
